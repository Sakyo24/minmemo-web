{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-recommended", "prettier"],
  "plugins": ["json", "vue", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 13
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "quote-props": ["error", "as-needed"],
    "no-var": "error",
    "vue/valid-template-root": "off",
    "vue/multi-word-component-names": "off",
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 5,
        "multiline": {
          "max": 1
        }
      }
    ]
  }
}
